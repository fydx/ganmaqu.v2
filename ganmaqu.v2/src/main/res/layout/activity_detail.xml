<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/detail_type"
        android:scaleType="centerCrop"
        android:src="@drawable/detail_eat"
        android:layout_alignParentTop="true"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_type_small"
        android:src="@drawable/detail_small_eat"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="彼德西餐厅"
        android:id="@+id/textView_detail_shopname"
        android:textSize = "25dp"
        android:padding="8dp"
        android:layout_alignBottom="@+id/detail_type"
        android:layout_centerHorizontal="true"
        android:background="#2d3236"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
       android:layout_marginBottom="10dp"
        android:background="@drawable/call"
        android:id="@+id/call"
        android:layout_alignBottom="@+id/detail_type"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/detail_banner"
        android:layout_below="@+id/call"
        android:text="地点详情"
        android:gravity="center"
        android:textSize="16dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address"
        android:id="@+id/textView_detail_address"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divider_horizontal"
        android:layout_below="@+id/textView_detail_address"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:src="@drawable/divider_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人均消费"
        android:id="@+id/textView_detail_renjun"
        android:layout_below="@+id/divider_horizontal"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:id="@+id/textView_detail_cost"
        android:layout_marginTop="28dp"
        android:paddingLeft="30dp"
        android:textSize="30dp"
        android:textColor="#4bc1d2"
        android:layout_below="@+id/textView_detail_renjun"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="元"
        android:id="@+id/textView_yuan"
        android:layout_alignTop="@+id/textView_detail_cost"
        android:layout_toLeftOf="@+id/detail_type_small" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divider_vertical"
        android:src="@drawable/divider_vertical"
        android:layout_alignTop="@+id/textView_detail_renjun"
        android:layout_toRightOf="@+id/textView_yuan"
        android:paddingLeft="20dp"
        android:padding="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="营业时间"
        android:id="@+id/textView_yingyeshijian"
        android:textSize="20dp"
        android:paddingTop="15dp"
        android:layout_alignTop="@+id/divider_vertical"
        android:layout_toRightOf="@+id/divider_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textView_time"
        android:layout_below="@+id/textView_yingyeshijian"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/divider_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简介"
        android:id="@+id/textView_jieshao"
        android:textSize="20dp"
        android:layout_below="@+id/textView_time"
        android:layout_toRightOf="@+id/divider_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_detail_info"
        android:layout_below="@+id/textView_jieshao"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/divider_vertical" />


</RelativeLayout>