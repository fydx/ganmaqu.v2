<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
     android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_margin="8dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_typeSelect"
        android:src="@drawable/button_ktv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KTV"
        android:id="@+id/textview_typeSelect"
        android:layout_below="@+id/imageView_typeSelect"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/checkbox_typeSelect"
        android:layout_alignTop="@+id/imageView_typeSelect"
        android:layout_toRightOf="@+id/textview_typeSelect"
        android:checked="true" />


</RelativeLayout>